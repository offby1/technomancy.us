<?xml version="1.0" encoding="UTF-8"?>
<% require 'cgi' %>
<feed xml:lang="en-US" xmlns="http://www.w3.org/2005/Atom">
  <title>Technomancy</title>
  <id>tag:technomancy.us,2007:blog/</id>
  <link href="http://technomancy.us/feed/atom" rel="self" type="application/atom+xml"/>
  <link href="http://technomancy.us/" rel="alternate" type="text/html"/>
  <updated><%= Time.now.to_s %></updated>

  <% page.each do |post| %>
  <entry xml:base="http://technomancy.us">
    <author><name>Phil Hagelberg</name></author>
    <id>tag:technomancy.us,2007:<%= URI.escape post['title'] %></id>
    <published><%= Time.stamp(post['timestamp']) %></published>
    <updated><%= Time.stamp(post['timestamp']) %></updated>

    <link href="http://technomancy.us/<%= post['id'] %>" rel="alternate" type="text/html"/>
    <title><%= CGI.escapeHTML post['title'] %></title>
    <content type="html">
      <%= CGI.escapeHTML post['content'] %>
    </content>
  </entry>
  <% end %>
</feed>
